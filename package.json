{
  "name": "stat-preview-card",
  "version": "1.0.0",
  "description": "My solution for the Stat Preview Card challenge from Frontendmentor.io",
  "main": "index.js",
  "scripts": {
    "serve": "browser-sync start --server --watch",
    "sass": "sass --watch scss/styles.scss:css/styles.css",
    "sass:serve": "concurrently --kill-others \"npm run sass\" \"npm run serve\"",
    "prod": "sass scss/styles.scss:css/styles.css && postcss css/styles.css -o css/styles.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinjmm/stat-preview-card.git"
  },
  "author": "robinjmm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robinjmm/stat-preview-card/issues"
  },
  "homepage": "https://github.com/robinjmm/stat-preview-card#readme",
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "concurrently": "^7.4.0"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "autoprefixer": "^10.4.12",
    "cssnano": "^5.1.13",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.0.0",
    "sass": "^1.55.0"
  }
}
