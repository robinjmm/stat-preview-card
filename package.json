{
  "name": "stat-preview-card",
  "version": "1.0.0",
  "description": "A challenge to build a stat preview card component from Frontendmentor.io",
  "main": "index.js",
  "scripts": {
    "devServer": "browser-sync start --server --files css/index.css",
    "sass": "sass --watch scss/app.scss:css/index.css",
    "sass:watch": "concurrently --kill-others \"npm run sass\" \"npm run devServer\"",
    "sass:prod": "sass --style=compressed scss/app.scss:css/index.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robinjmm/stat-preview-card.git"
  },
  "author": "robinjmm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/robinjmm/stat-preview-card/issues"
  },
  "homepage": "https://github.com/robinjmm/stat-preview-card#readme",
  "devDependencies": {
    "browser-sync": "^2.27.10",
    "concurrently": "^7.4.0",
    "sass": "^1.51.0"
  }
}